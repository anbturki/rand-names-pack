{
  "name": "rand-names-pack",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Barakat Turki <barakat.turki@gmail.com>",
  "license": "MIT",
  "description": "Get random people names.",
  "scripts": {
    "lint": "eslint .",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:coverage": "NODE_ENV=test nyc mocha",
    "validate": "npm-run-all --parallel lint test:coverage",
    "prebuild": "rimraf dist",
    "build:main": "babel --ignore *test.* --copy-files --out-dir dist src",
    "build:umd": "webpack --output-filename index.umd.js"
  },
  "dependencies": {
    "unique-random-array": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-google": "^0.11.0",
    "ghooks": "^2.0.4",
    "json-loader": "^0.5.7",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "files": [
    "dist"
  ],
  "nyc": {
    "all": true,
    "check-coverage": true,
    "functions": 100,
    "lines": 100,
    "branches": 100,
    "liens": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "instrument": false,
    "sourceMap": false,
    "include": [
      "src"
    ],
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn validate"
    }
  }
}
